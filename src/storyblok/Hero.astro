---

import { storyblokEditable } from '@storyblok/astro'
import StoryblokComponent from '@storyblok/astro/StoryblokComponent.astro'
import Hero from '../components/Hero.astro';

const { blok } = Astro.props;

---
<div {...storyblokEditable(blok)} class='hero-container'>
    <section class="hero">
        <div class="content-container">
            <div class="flex flex-col items-center gap-8 md:items-start">
                <h1 class="text-center text-6xl md:text-left lg:text-8xl">
                    {blok.title}
                </h1>
                <!-- <div class="flex flex-col gap-3 min-[500px]:flex-row">
                    <a class="button has-icon" href="https://github.com/markteekman/accessible-astro-starter">
                        <Icon pack="ion" name="star-outline" />
                        Star on GitHub
                    </a>
                    <a
                        class="button has-icon color-secondary"
                        href="https://github.com/markteekman/accessible-astro-starter/blob/main/README.md"
                    >
                        <Icon pack="ion" name="bookmark-outline" />
                        Read the Docs
                    </a>
                </div> -->
            </div>
            
        </div>
        <img class="background-image" src={blok.backgroundImage.filename} alt="" decoding="async" />
    </section>
</div>

<style lang="scss">
    .hero-container {
        height: 100%;
        width: 100%;
        position: relative;
        z-index: 1;
        min-height: 500px;
    }
    .hero {
        
    }
    .background-image {
        position: absolute;
        z-index: -12;
        object-fit: cover;
        width: 100%;
        top: 0;
    }

    .text-center {
        color: white;
    }

    .content-container {
        margin: 200px 0 0 50px;
        width: 60%;
    }
</style>

